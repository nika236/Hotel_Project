<% if current_user && (booking.user == current_user || current_user.admin?) %>
  <div class="card mb-2">
    <div class="card-body">
      <h5 class="card-title">Booking Details</h5>
      <p class="card-text"><strong>Code:</strong> <%= booking.booking_code %></p>
      <p class="card-text"><strong>Start Date:</strong> <%= booking.start_date.strftime("%B %d, %Y %H:%M") %></p>
      <p class="card-text"><strong>End Date:</strong> <%= booking.end_date.strftime("%B %d, %Y %H:%M") %></p>
      <p class="card-text"><strong>Total Price:</strong> <%= number_to_currency(booking.count_price) %></p>
      <% if current_user.admin? %>
      <p class="card-text"><strong>Owner:</strong> <%= booking.user.username if booking.user %></p>
      <% end %>
        <% if booking.user == current_user %>
        <%= link_to "Delete Booking", hotel_room_booking_path(@hotel, @room, booking), class: "btn btn-dark", data: { turbo_method: :delete, turbo_confirm: "Are you Sure" } %>
      <% end %>
    </div>
  </div>
<% end %>