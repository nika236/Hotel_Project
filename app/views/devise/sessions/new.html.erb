<div class="container mt-4">
  <h3>Welcome to Our Hotel Booking System</h3>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
    <div class="col-sm-4">
      <%= f.label :email, class: 'sr-only' %>
      <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="col-sm-4">
      <%= f.label :password, class: 'sr-only' %>
      <%= f.password_field :password, class: 'form-control', autocomplete: "current-password", placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group form-check">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me, class: 'form-check-label' %>
      </div>
    <% end %>

    <div class="col-sm-4">
      <%= f.submit "Log in", class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
