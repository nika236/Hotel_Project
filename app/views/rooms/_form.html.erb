<%= form_with(model: obj, local: true, class: 'my-4') do |form| %>

  <div class="col-sm-2">
    <%= form.label :room_code, class: 'form-label' %>
    <%= form.text_field :room_code, class: 'form-control' %>
  </div>

  <div class="col-sm-2">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="col-sm-2">
    <%= form.label :hotel_id, class: 'form-label' %>
    <%= form.collection_select :hotel_id, Hotel.all, :id, :name, { prompt: 'Select a hotel' }, { class: 'form-select', required: false } %>
  </div>

  <div class="col-sm-2">
    <%= form.label :price_per_night, class: 'form-label' %>
    <%= form.number_field :price_per_night, class: 'form-control' %>
  </div>

  <div class="mt-3">
    <%= form.submit 'Save Room', class: 'btn btn-primary' %>
  </div>
<% end %>